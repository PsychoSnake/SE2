#include "LPC17xx.h"
#include "gpio.h"
#include "keypad.h"
#include "led.h"

void delay(int time);

int layoutTest[] = {5,6,7,8,9,10,11,12,14,15,16,17,18};


int main(){
	LED_Init(7,0);
	KEYPAD_Init(layoutTest);

	int i;
	int key;
	while(1){
		key = KEYPAD_Read();
		for(i = 0; i < key; i++){
			LED_SetState(1);
			delay(400);
			LED_SetState(0);
			delay(400);
		}

	}
}
