#ifdef __USE_CMSIS
#include "LPC17xx.h"
#include "core_cm3.h"
#endif

#include <cr_section_macros.h>

#include <stdio.h>

#define LED_PIN_ID 1 << 22

int ledState = 1;


int main(void) {

	LPC_GPIO0->FIOSET = LED_PIN_ID;
	SysTick_Config();
	//P0.22

    while(1){

    }

    return 0 ;
}


void SysTick_Handler(void){
	if(ledState)
		LPC_GPIO0->FIOCLR = LED_PIN_ID;
	else
		LPC_GPIO0->FIOSET = LED_PIN_ID;
}
